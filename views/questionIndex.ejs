<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <link rel="stylesheet" href="./css/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title><%=question.title%> | <%= election.electionName %></title>
    <script>
      const token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function deleteOption(id) {
        fetch(`/options/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ _csrf: token }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.error(err));
      }
    </script>
  </head>
  <body class="bg-gray-500 font-mono">
    <%- include('header.ejs', {title:"Online Voting Platform"})%>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <div class="mt-5">
          <a href="/elections/<%= election.id%>"
            ><h2 class="text-2xl font-black capitalize">
              <%= election.electionName %>
            </h2></a
          >
        </div>
        <div class="mt-5">
          <h3 class="text-xl font-black capitalize"><%=question.title%></h3>
          <span class="text-sm font-normal normalcase"><%=question.description%></span>
        </div>
        <div class="flex mt-3">
          <form action="/options" method="post">
            <label for="title">Option</label>
            <div class="flex gap-2">
              <div class="flex-auto">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <input
                  name="title"
                  type="text"
                  placeholder="Type your Option here!"
                  class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2"
                  autofocus
                  required
                />
              </div>
              <input
                type="hidden"
                name="questionId"
                value="<%= question.id %>"
              />
              <input
                type="hidden"
                name="electionId"
                value="<%= election.id %>"
              />
              <div>
                <button
                  type="submit"
                  class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2"
                >
                  Add
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="mt-5">
          <h3 class="text-xl font-black">Options</h3>
          <ul>
            <% for(let i = 0; i < options.length; i++ ) {%>
            <li>
              <div
                class="flex w-fit my-2 px-2 py-1 items-center rounded hover:bg-purple-50"
              >
                <span class="ml-2 text-sm text-black-800 cursor-pointer capitalize"
                  ><%= options[i].title %></span
                >
                <a
                  href="/elections/<%= election.id %>/questions/<%= question.id %>/options/<%=options[i].id%>/edit"
                  class="block ml-2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 25 25"
                    stroke-width="1.3"
                    stroke="currentColor"
                    class="w-5 h-5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
                    />
                  </svg>
                </a>

                <a
                  href="#"
                  class="trash-icon ml-2"
                  onclick="deleteOption(<%=options[i].id%>)"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 26 26"
                    stroke-width="1.3"
                    stroke="currentColor"
                    class="w-5 h-5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                    />
                  </svg>
                </a>
              </div>
            </li>
            <%}%>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
