<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script></script>
    <title></title>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs')%>
        <form action="/elections" method="post">
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
            <input
              name="electionName"
              type="text"
              placeholder="What is your election's name ?"
              class="border border-gray-300 text-gray-900 text-sm rounded w-full p-2"
              autofocus
            />
            </div>
            <div>
              <button
                type="submit"
                class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2"
              >
                Create
              </button>
            </div>
          </div>
        </form>
        <div class="mb-3"></div>
        <div>
          <%- include('election.ejs', {title: "Live", elections: liveElections})
          %> <%- include('election.ejs', {title: "UpComing", elections:
          upcoming}) %> <%- include('election.ejs', {title: "Completed",
          elections: completed}) %>
        </div>
      </div>
    </div>
  </body>
</html>
